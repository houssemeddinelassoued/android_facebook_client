<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="5dp"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<fi.harism.facebook.view.BitmapSwitcher
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/view_post_from_picture" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_gravity="center_vertical"
			android:orientation="vertical" >
			<TextView
				style="@style/contentTextBold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:id="@+id/view_post_from" />
			<TextView
				style="@style/contentText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/view_post_message" />
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp" >
		<ImageView
			android:layout_height="fill_parent"
			android:layout_width="3dp"
			android:src="#D2D2E2" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:orientation="vertical" >
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:id="@+id/view_post_picture" />
				<TextView
					style="@style/contentTextBold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@id/view_post_picture"
					android:layout_alignWithParentIfMissing="true"
					android:id="@+id/view_post_name" />
				<TextView
					style="@style/contentText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@id/view_post_picture"
					android:layout_below="@id/view_post_name"
					android:layout_alignWithParentIfMissing="true"
					android:id="@+id/view_post_caption" />
			</RelativeLayout>
			<TextView
				style="@style/contentText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/view_post_description" />
			<TextView
				style="@style/contentTextSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:id="@+id/view_post_details" />
		</LinearLayout>
	</LinearLayout>
	
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="2px"
		android:src="@drawable/item_separator" />

</LinearLayout>
